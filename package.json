{
	"scripts": {
		"lint": "xo && stylelint source/*.css",
		"test": "npm run lint && ava && npm run build",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch",
		"release:cws": "cd distribution && webstore upload --auto-publish",
		"release": "run-s build update-version release:cws",
		"update-version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION"
	},
	"dependencies": {
		"dom-chef": "^3.0.0",
		"dom-loaded": "^1.0.0",
		"dompurify": "^1.0.4",
		"element-ready": "^3.0.0",
		"jquery": "^3.2.1",
		"lodash.debounce": "^4.0.8",
		"lodash.groupby": "^4.6.0",
		"lodash.pick": "^4.4.0",
		"lodash.sortby": "^4.7.0",
		"prismjs": "^1.9.0",
		"select-dom": "^4.1.1",
		"webext-options-sync": "^0.15.0",
		"webextension-polyfill": "^0.2.1"
	},
	"devDependencies": {
		"ava": "*",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-react-jsx": "^6.24.1",
		"chrome-webstore-upload-cli": "^1.1.1",
		"copy-webpack-plugin": "^4.2.0",
		"dot-json": "^1.0.3",
		"npm-run-all": "^4.1.1",
		"stylelint": "^9.1.1",
		"stylelint-config-xo": "^0.9.0",
		"utc-version": "^1.0.0",
		"webpack": "^4.1.0",
		"webpack-cli": "^3.0.8",
		"xo": "*"
	},
	"xo": {
		"envs": [
			"browser",
			"jquery"
		],
		"rules": {
			"import/no-unassigned-import": 0,
			"no-unused-vars": [
				2,
				{
					"varsIgnorePattern": "^h$"
				}
			]
		},
		"globals": [
			"browser"
		]
	},
	"ava": {
		"files": [
			"test/*.js"
		],
		"require": [
			"babel-register"
		]
	},
	"babel": {
		"plugins": [
			[
				"transform-react-jsx",
				{
					"pragma": "h",
					"useBuiltIns": true
				}
			]
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"declaration-no-important": null
		}
	}
}
